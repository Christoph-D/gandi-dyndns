#!/usr/bin/python

import xmlrpclib
import getopt
import sys

api = xmlrpclib.ServerProxy('https://rpc.gandi.net/xmlrpc/')

def main():
    apikey = ''
    record = ''

    try:
        opts, args = getopt.getopt(sys.argv[1:], "ahr", ["api=", "record=", "help"])
    except getopt.GetoptError as err:
        print(err)
        usage()
        sys.exit(2)
    for opt, arg in opts:
        if opt in ("-a", "--api"):
            apikey = arg
        elif opt in ("-h", "--help"):
            usage()
            sys.exit()
        elif opt in ("-r", "--record"):
            record = arg

    print(zone_list(apikey))

def usage():
    print("Usage: gandi-dyndns --api=APIKEY --record=RECORD")

def api_version(apikey):
    return api.version.info(apikey)

def zone_list(apikey):
    return api.domain.zone.list(apikey)

if __name__ == "__main__":
    main()
